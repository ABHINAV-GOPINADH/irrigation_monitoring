<!-- views/motor.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <title>Motor Data</title>
</head>
<body>
    <div class="container text-bg-success fs-1 p-3 text-center p-0">
        Agriculture Monitoring App
    </div>
    <div class="container p-0">
        <ul class="mx-0 nav nav-tabs">
            <li class="nav-item">
                <a class="nav-link" href="/test">Test</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/display">Display Data</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/pump">Pump</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/motor">Motor</a>
            </li>
            <li class="nav-item">
                <form action="/logout" method="post">
                    <button type="submit" class="nav-link btn btn-link">Logout</button>
                </form>
            </li>
        </ul>
    </div>
    <div class="container p-3 text-center">
        <h1>Motor Data</h1>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Duration (seconds)</th>
                    <th>Status</th>
                    <th>Timestamp</th>
                </tr>
            </thead>
            <tbody>
                <% motors.forEach(function(motor) { %>
                    <tr>
                        <td><%= motor.duration %></td>
                        <td><%= motor.status %></td>
                        <td><%= motor.timestamp.toLocaleString() %></td>
                    </tr>
                <% }); %>
            </tbody>
        </table>
    </div>
</body>
</html>
